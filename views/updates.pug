doctype html
html(lang="en")
    head
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
       
        .form-wrapper
            h1 Add new Company properties
            a(href='/') Return to the homepage
            form(method="POST")
                label(for="newName") Company Name
                input(type="text" name="newName" required)
                label(for="newBal") New Balance
                input(type="number" step="0.01" name="newBal" required)
                label(for="newLPayDay") Last Payment Day
                input(type="date" name="newLPayDay" required)
                label(for="newLYearTurnover") Last Year Turnover
                input(type="number" step="0.01" name="newLYearTurnover" required)
                input(type="submit" value="Submit")
